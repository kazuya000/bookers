<h2>Books</h2>
<table>
<thead>
<tr>
  <th>title</th>
  <th>body</th>
</tr>
</thead>
<tbody>
<% @books.each do |book| %>
<tr>
<td>
<%= book.title %>
</td>
<td>
<%= book.body %>
</td>
<td>
<%= link_to"show",book_path(book.id), class: "show_#{book.id}"  %>
<%= link_to"edit", edit_book_path(book.id),class: "edit_#{book.id}" %>
<%= link_to"destroy", book_path(book.id),method: :delete, class: "destroy_#{book.id}", "data-confirm" =>"Are you sure?" %>
</td>
</tr>
<% end %>
</tbody>
</table>


<h3> New book </h3>
<%= form_for(@book) do |f| %>

<p> title </p>
<%= f.text_field :title, class: "book_title" %>
<p> body </p>
<%= f.text_area :body, class: "book_body" %>

<%= f.submit'Creaet Book' %>
<% end %>